<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/purple_500">

    <EditText
        android:id="@+id/txt_id"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="0"
        android:ems="10"
        android:hint="Id"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_username"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />

    <EditText
        android:id="@+id/txt_username"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="0"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_rol"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />

    <EditText
        android:id="@+id/txt_rol"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="0"
        android:ems="10"
        android:hint="Rol"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />

    <EditText
        android:id="@+id/txt_name"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="0"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="128dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="48dp"
        android:layout_weight="0"
        android:text="Nuevo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_id"

        android:textSize="15sp"
        app:cornerRadius="20dp"
        style="?attr/materialButtonOutlinedStyle"
        android:textColor="@color/lila"
        app:strokeColor="@color/lila"
        />

    <Button
        android:id="@+id/btn_listar"
        android:layout_width="123dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:layout_weight="0"
        android:text="Listar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"

        android:textSize="15sp"
        app:cornerRadius="20dp"
        style="?attr/materialButtonOutlinedStyle"
        android:textColor="@color/lila"
        app:strokeColor="@color/lila"
        />

    <Button
        android:id="@+id/btn_detail"
        android:layout_width="127dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:layout_weight="0"
        android:text="Detalles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_listar"

        android:textSize="15sp"
        app:cornerRadius="20dp"
        style="?attr/materialButtonOutlinedStyle"
        android:textColor="@color/lila"
        app:strokeColor="@color/lila"
        />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="225dp"
        android:layout_height="51dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="92dp"
        android:layout_weight="0"
        android:text="Borrar usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_update"

        android:textSize="15sp"
        app:cornerRadius="20dp"
        style="?attr/materialButtonOutlinedStyle"
        android:textColor="@color/lila"
        app:strokeColor="@color/lila"
        />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="139dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="42dp"
        android:layout_weight="0"
        android:text="Actualizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_send"

        android:textSize="15sp"
        app:cornerRadius="20dp"
        style="?attr/materialButtonOutlinedStyle"
        android:textColor="@color/lila"
        app:strokeColor="@color/lila"

        />

    <TextView
        android:id="@+id/txt_count"
        android:layout_width="410dp"
        android:layout_height="22dp"
        android:layout_weight="0"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="88dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:text="Nombre:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="88dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:text="Roll:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Username:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="88dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:text="Id:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>